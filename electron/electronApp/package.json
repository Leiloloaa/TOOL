{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "Electron App",
  "license": "ISC",
  "author": "Stone",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --exec electron .",
    "build": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "tool": "open ./out/my-electron-app-darwin-arm64/my-electron-app.app"
  },
  "build": {
    "appId": "com.atguigu.video",
    "win": {
      "icon": "./logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "electron": "^37.3.1",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "electron-squirrel-startup": "^1.0.1"
  }
}
