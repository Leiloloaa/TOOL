{
  "name": "code-inline-calculator",
  "displayName": "Code Inline Calculator",
  "description": "这是一款简洁的代码内联计算器，支持输入触发弹框、实时计算和一键替换",
  "version": "2.0.1",
  "publisher": "devtools-helper",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "calculator",
    "math",
    "expression",
    "calculation",
    "productivity",
    "计算器",
    "数学",
    "表达式"
  ],
  "activationEvents": [
    "onStartupFinished",
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "calculator-helper.calculate",
        "title": "计算表达式",
        "category": "Calculator Helper"
      },
      {
        "command": "calculator-helper.replace",
        "title": "替换表达式",
        "category": "Calculator Helper"
      }
    ],
    "configuration": {
      "title": "Calculator Helper",
      "properties": {
        "calculator-helper.precision": {
          "type": "number",
          "default": 2,
          "description": "计算结果保留的小数位数"
        },
        "calculator-helper.autoCalculate": {
          "type": "boolean",
          "default": true,
          "description": "是否自动计算表达式"
        },
        "calculator-helper.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "是否在状态栏显示计算结果"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/vscode-calculator-helper.git"
  },
  "homepage": "https://github.com/your-repo/vscode-calculator-helper#readme",
  "bugs": {
    "url": "https://github.com/your-repo/vscode-calculator-helper/issues"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#667eea",
    "theme": "dark"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4",
    "@vscode/vsce": "^2.19.0"
  }
}
