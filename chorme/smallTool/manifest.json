{
  "manifest_version": 3,
  "name": "小工具集合",
  "version": "1.0.0",
  "description": "一个易于扩展的浏览器小工具集合插件",
  "permissions": [
    "storage",
    "clipboardWrite",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/*",
    "https://cdn.jsdelivr.net/*",
    "https://api.qrserver.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png"
  }
}
